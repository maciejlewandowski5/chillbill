<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatisticsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/expenses"
                android:textAppearance="@style/header" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pie_chart"
                android:layout_width="match_parent"
                android:layout_height="300dp">

            </com.github.mikephil.charting.charts.PieChart>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/month_to_month_comparison"
                android:textAppearance="@style/header" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <Button
                            android:id="@+id/orange_category_button"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="28sp"
                            android:layout_marginStart="16dp"
                            android:backgroundTint="@color/orange"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:text="@string/orange_category"
                            android:textAllCaps="false"
                            android:textColor="@color/design_default_color_on_primary"
                            android:textSize="11sp"
                            app:cornerRadius="50dp" />

                        <Button
                            android:id="@+id/purple_category_button"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="28sp"
                            android:layout_marginStart="16dp"
                            android:backgroundTint="@color/purple"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:text="@string/purple_category"
                            android:textAllCaps="false"
                            android:textColor="@color/design_default_color_on_primary"
                            android:textSize="11sp"
                            app:cornerRadius="50dp" />

                        <Button
                            android:id="@+id/yellow_category_button"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="28sp"
                            android:layout_marginStart="16dp"
                            android:backgroundTint="@color/yellow"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:text="@string/yellow_category"
                            android:textAllCaps="false"
                            android:textColor="@color/design_default_color_on_primary"
                            android:textSize="11sp"
                            app:cornerRadius="50dp" />

                        <Button
                            android:id="@+id/green_categoty_button"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="28sp"
                            android:layout_marginStart="16dp"
                            android:backgroundTint="@color/green"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:text="@string/green_category"
                            android:textAllCaps="false"
                            android:textColor="@color/design_default_color_on_primary"
                            android:textSize="11sp"
                            app:cornerRadius="50dp" />

                        <Button
                            android:id="@+id/blue_category_button"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="28sp"
                            android:layout_marginStart="16dp"
                            android:backgroundTint="@color/blue"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:text="@string/blue_category"
                            android:textAllCaps="false"
                            android:textColor="@color/design_default_color_on_primary"
                            android:textSize="11sp"
                            app:cornerRadius="50dp" />


                    </LinearLayout>
                </HorizontalScrollView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/month_by_month_bar_chart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/background_chart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </com.github.mikephil.charting.charts.BarChart>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/trends"
                android:textAppearance="@style/header" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <Button
                            android:id="@+id/orange_category_button2"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="28sp"
                            android:layout_marginStart="16dp"
                            android:backgroundTint="@color/orange"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:text="@string/orange_category"
                            android:textAllCaps="false"
                            android:textColor="@color/design_default_color_on_primary"
                            android:textSize="11sp"
                            app:cornerRadius="50dp" />

                        <Button
                            android:id="@+id/purple_category_button2"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="28sp"
                            android:layout_marginStart="16dp"
                            android:backgroundTint="@color/purple"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:text="@string/purple_category"
                            android:textAllCaps="false"
                            android:textColor="@color/design_default_color_on_primary"
                            android:textSize="11sp"
                            app:cornerRadius="50dp" />

                        <Button
                            android:id="@+id/yellow_category_button2"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="28sp"
                            android:layout_marginStart="16dp"
                            android:backgroundTint="@color/yellow"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:text="@string/yellow_category"
                            android:textAllCaps="false"
                            android:textColor="@color/design_default_color_on_primary"
                            android:textSize="11sp"
                            app:cornerRadius="50dp" />

                        <Button
                            android:id="@+id/green_categoty_button2"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="28sp"
                            android:layout_marginStart="16dp"
                            android:backgroundTint="@color/green"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:text="@string/green_category"
                            android:textAllCaps="false"
                            android:textColor="@color/design_default_color_on_primary"
                            android:textSize="11sp"
                            app:cornerRadius="50dp" />

                        <Button
                            android:id="@+id/blue_category_button2"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="28sp"
                            android:layout_marginStart="16dp"
                            android:backgroundTint="@color/blue"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:text="@string/blue_category"
                            android:textAllCaps="false"
                            android:textColor="@color/design_default_color_on_primary"
                            android:textSize="11sp"
                            app:cornerRadius="50dp" />


                    </LinearLayout>
                </HorizontalScrollView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <com.github.mikephil.charting.charts.LineChart
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/background_chart" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/savings"
                android:textAppearance="@style/header" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
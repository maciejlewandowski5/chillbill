<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="chillbill">
        <item name="android:textSize">
            48sp
        </item>
        <item name="android:textColor">
            @color/middle_dark_grey
        </item>
    </style>

    <style name="header">
        <item name="android:textSize">
            24sp
        </item>
        <item name="android:textColor">
            @color/dark_grey
        </item>
    </style>

    <style name="item_history_title">
        <item name="android:textSize">
            18sp
        </item>

        <item name="android:textColor">
            @color/dark_grey
        </item>
        <!--<item name="android:textAllCaps">true</item> -->
        <item name="android:textFontWeight">600</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="bold_price">
        <item name="android:textSize">
            18sp
        </item>

        <item name="android:textColor">
            @color/middle_dark_grey
        </item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="title_fit">

        <item name="android:textSize">
            18sp
        </item>

        <item name="android:textColor">
            @color/light_grey
        </item>

    </style>

    <style name="text_fit">

        <item name="android:textSize">
            9sp
        </item>

        <item name="android:textColor">
            @color/light_grey
        </item>

    </style>

    <style name="Xlogo" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="text_item_history_extended">

        <item name="android:textSize">
            9sp
        </item>

        <item name="android:textColor">
            @color/light_black
        </item>


    </style>
    <style name="table_element">

        <item name="android:textSize">
            14sp
        </item>

        <item name="android:textColor">
            @color/light_black
        </item>

    </style>
    <style name="spinnerTheme">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textColorHint">@color/orange</item>
        <item name="android:backgroundTint">@color/purple</item>
    </style>
</resources>